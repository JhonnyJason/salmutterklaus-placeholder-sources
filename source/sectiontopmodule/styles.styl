// sectiontop styles
#hero-picture
    display: block
    background-color black
    width 100%
    object-fit: cover;
    vertical-align: top

#sectiontop
    background-color rgba(0, 50, 140, 0.2)
    display flex
    flex-direction column

    .text-element
        width 100%
        height 40vh


@media screen and (min-width 724px)
    
    #sectiontop
        flex-direction row

        .text-element
            height 100vh    
            width 40%

