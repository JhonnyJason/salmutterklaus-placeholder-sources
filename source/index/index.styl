#background
    width 100%
    height 100vh
    background-color black

#overlay
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-color black
    padding 20px
    text-align: center



// footer styles
footer-icon-size = 50px


#footer
    background-color: white
    padding 40px 40px 40px 40px
    display flex
    justify-content: space-between

#footer-bottom
    background-color: black
    color white
    height 20px

#instagram-link
    color white
    // display block
    // margin-left auto
    width footer-icon-size
    height footer-icon-size
    svg
        width footer-icon-size
        height footer-icon-size

#footer-left
    text-align: left
    max-width 320px
    h1
        margin-bottom: 10px
        text-transform: uppercase
    h2
        margin-bottom 10px
    p 
        margin-bottom 6px


@media screen and (max-width: 550px)
    #footer
        flex-direction: column
    