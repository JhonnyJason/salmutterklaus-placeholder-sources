// sectionbottom styles
#sectionbottom
    background-color rgba(138, 050 0, 0.2)
    display flex
    flex-direction column
    overflow hidden
    
.video-element
    width 100%
    height 60vh
    background-color black
    display block
    object-fit: cover

.text-element
    width 100%
    height 40vh


@media screen and (min-width 724px)
    #sectionbottom
        flex-direction row

    .video-element
        height 100vh
        width 60%

    .text-element
        height 100vh
        width 40%

